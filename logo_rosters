<body>
  <div class="wrap">
    <div class="topbar">
      <div class="brand">
        <div class="sig">League 7</div>
        <div class="sub">Logos & Rosters</div>
      </div>
      <div class="controls">
        <select id="viewSelect" aria-label="Choose view"></select>
      </div>
    </div>

    <div class="stage">
      <!-- Logo grids -->
      <div id="gridAll" class="grid hidden"></div>
      <div id="gridWC" class="grid hidden"></div>
      <div id="gridTW" class="grid hidden"></div>

      <!-- Split (logo + roster) -->
      <div id="splitView" class="split hidden">
        <div class="panel logoSide" id="logoSide">
          <div class="logoWrap"><img id="teamLogo" alt="Team logo" /></div>
          <div class="teamTitle"><div class="teamName" id="teamName"></div><div class="divisionBadge" id="teamDiv"></div></div>
        </div>
        <div class="panel rosterSide">
          <div class="rosterHead"><div class="rosterTitle">Active Roster</div><div class="count" id="rosterCount"></div></div>
          <div class="list" id="rosterList"></div>
          <div class="hint">Tip: Use the dropdown (top-right) to switch views</div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // -----------------------------
    // 1) DATA — Populate this block
    // -----------------------------
    // Minimal example; replace with your full Season 3 teams
    // If a team has no logo yet, set logo: "" and we'll show the name instead
    const TEAMS = [
      {
        name: "Winguardians",
        division: "World Cup",
        logo: "assets/logos/Winguardians.png",
        roster: ["WIN | n e o","Flyrish","Player 3","Player 4","Player 5","Player 6","Player 7","Player 8","Player 9","Player 10"]
      },
      {
        name: "Nocturn Ravens",
        division: "Triwizard Cup",
        logo: "assets/logos/Nocturn_Ravens.png",
        roster: ["Riley","Malikosis","Player 3","Player 4","Player 5","Player 6"]
      },
      // --- Add the rest of your teams below ---
    ];

    // ---------------------------------
    // 2) BUILD DROPDOWN + INITIAL VIEW
    // ---------------------------------
    const select = document.getElementById('viewSelect');
    const OPTIONS = [
      {value:'wc_all', label:'World Cup All'},
      {value:'tw_all', label:'Triwizard Cup All'},
      {value:'all_logos', label:'All Logos'},
      ...TEAMS.map(t=>({value:`team::${t.name}`, label:t.name}))
    ];
    OPTIONS.forEach(opt=>{
      const o=document.createElement('option'); o.value=opt.value; o.textContent=opt.label; select.appendChild(o);
    });

    // URL param support: ?view=team::Winguardians or wc_all / tw_all / all_logos
    const urlParams = new URLSearchParams(location.search);
    const startView = urlParams.get('view') || 'wc_all';
    select.value = OPTIONS.find(o=>o.value===startView) ? startView : 'wc_all';

    // ---------------------------
    // 3) RENDER HELPERS (VIEWS)
    // ---------------------------
    const gridAll = document.getElementById('gridAll');
    const gridWC  = document.getElementById('gridWC');
    const gridTW  = document.getElementById('gridTW');
    const split   = document.getElementById('splitView');

    function clearViews(){
      [gridAll, gridWC, gridTW, split].forEach(el=>el.classList.add('hidden'));
    }

    function makeLogoCell(team){
      const cell = document.createElement('div');
      cell.className = 'logoCell';
      if(team.logo){
        const img = document.createElement('img');
        img.src = team.logo;
        img.alt = team.name + ' logo';
        cell.appendChild(img);
      } else {
        const span = document.createElement('span');
        span.textContent = team.name;
        cell.appendChild(span);
      }
      return cell;
    }

    function renderAll(){
      clearViews();
      gridAll.innerHTML = '';
      TEAMS.forEach(t=>gridAll.appendChild(makeLogoCell(t)));
      gridAll.classList.remove('hidden');
    }

    function renderWC(){
      clearViews();
      gridWC.innerHTML = '';
      TEAMS.filter(t=>/world cup/i.test(t.division)).forEach(t=>gridWC.appendChild(makeLogoCell(t)));
      gridWC.classList.remove('hidden');
    }

    function renderTW(){
      clearViews();
      gridTW.innerHTML = '';
      TEAMS.filter(t=>/triwizard/i.test(t.division)).forEach(t=>gridTW.appendChild(makeLogoCell(t)));
      gridTW.classList.remove('hidden');
    }

    function renderTeam(teamName){
      const team = TEAMS.find(t=>t.name===teamName);
      if(!team){ renderAll(); return; }
      clearViews();
      split.classList.remove('hidden');
      // Left side — logo + title
      const teamLogo = document.getElementById('teamLogo');
      const teamNameEl = document.getElementById('teamName');
      const teamDivEl = document.getElementById('teamDiv');
      teamNameEl.textContent = team.name;
      teamDivEl.textContent = team.division;
      if(team.logo){ teamLogo.src = team.logo; teamLogo.classList.remove('hidden'); }
      else { teamLogo.removeAttribute('src'); teamLogo.classList.add('hidden'); }
      // Right side — roster
      const list = document.getElementById('rosterList');
      list.innerHTML = '';
      (team.roster||[]).forEach(p=>{
        const row = document.createElement('div');
        row.className = 'chip';
        row.innerHTML = `<span class="dot"></span><span class="player">${p}</span>`;
        list.appendChild(row);
      });
      document.getElementById('rosterCount').textContent = `${(team.roster||[]).length} players`;
    }

    function renderByValue(val){
      if(val==='all_logos') return renderAll();
      if(val==='wc_all') return renderWC();
      if(val==='tw_all') return renderTW();
      if(val.startsWith('team::')) return renderTeam(val.split('team::')[1]);
      renderWC();
    }

    select.addEventListener('change', (e)=>{
      const v = e.target.value; renderByValue(v);
      const url = new URL(location.href); url.searchParams.set('view', v); history.replaceState({}, '', url);
    });

    // Kickoff
    renderByValue(startView);
  </script>
</body>
</html>
